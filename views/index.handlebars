<h1>Eat Da Burger!</h1>

<img src="/assets/image/burger.png" alt="burger cartoon figure">

<hr>
<div class="container">
    <div class="row">
        <div class="col-md-2"></div>
        <div class="col-md-4">
            <h4>Burgers Ready Just For You!</h4>
            <ul class="list-group">
                {{#each burgers}}
                {{#unless devoured}}
                {{> burgers/burgerList-block devoured=true}}
                {{/unless}}
                {{/each}}
            </ul>
        </div>

        <div class="col-md-4">
            <h4>In Your Stomach Right Now!</h4>
            <ul class="list-group">
                {{#each burgers}}
                {{#if devoured}}
                {{> burgers/burgerDevoured-block devoured=false}}
                {{/if}}
                {{/each}}
            </ul>
        </div>
        <div class="col-md-2"></div>
    </div>
</div>

<div class="container">
    <div class="row">
        <div class="col-md-3"></div>
        <form class="burger-form col-md-6">
            <div class="form-group">
                <label for="burger-input">Enter the burger that you want to eat and click the submit button!</label>
                <input type="text" class="form-control" id="burger-input" name="burger_name">
            </div>
            <button type="submit" class="btn btn-secondary">Add Burger!</button>
        </form>
        <div class="col-md-3"></div>
    </div>
</div>