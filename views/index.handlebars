<img src="/assets/image/burger.png" alt="burger cartoon figure">

<h1>Eat Da Burger!</h1>

<div class="container">
    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-3">
            <ul class="list-group">
                {{#each burgers}}
                {{#if devoured}}
                {{> burgers/burgerList-block devoured=false}}
                {{/if}}
                {{/each}}
            </ul>
        </div>

        <div class="col-md-3">
            <ul class="list-group">
                {{#each burgers}}
                {{#unless devoured}}
                {{> burgers/burgerDevoured-block devoured=true}}
                {{/unless}}
                {{/each}}
            </ul>
        </div>
        <div class="col-md-3"></div>
    </div>
</div>

<div class="container">
    <div class="row">
        <div class="col-md-3"></div>
        <form class="col-md-6 align-items-center ">
            <div class="form-group">
                <label for="burger_input">Enter the burger that you want to eat and click the submit button!</label>
                <input type="text" class="form-control" id="burger_input">
            </div>
            <button type="submit" class="btn btn-primary">Add Burger!</button>
        </form>
        <div class="col-md-3"></div>
    </div>
</div>